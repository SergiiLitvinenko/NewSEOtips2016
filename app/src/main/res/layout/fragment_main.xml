        <!--android:layout_height="wrap_content"-->
        <!--ads:adSize="BANNER"-->
        <!--ads:adUnitId="@string/banner_ad_unit_id_main">-->
    <!--</com.google.android.gms.ads.AdView>-->

</LinearLayout>

</RelativeLayout>

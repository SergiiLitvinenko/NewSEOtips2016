<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#004581">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/logo"
        android:layout_marginStart="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_app_name"
        android:textColor="#dde8f0"
        android:textSize="38sp"
        android:textAlignment="center"
        android:layout_above="@+id/ivLogo"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:id="@+id/rlMainButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAppName"
        android:layout_toEndOf="@+id/ivLogo">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/btnMainSeo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:background="@drawable/btn1"
                android:text="@string/main_seo_button"
                android:textSize="16sp"
                android:textColor="#dde8f0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
            </Button>

            <Button
                android:id="@+id/btnMainOptim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:background="@drawable/btn2"
                android:text="@string/main_optim_button"
                android:textSize="16sp"
                android:textColor="#dde8f0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/btnMainSeo"
                android:layout_marginTop="10dp">
            </Button>

            <Button
                android:id="@+id/btnMainTools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:background="@drawable/btn3"
                android:text="@string/main_tools_button"
                android:textSize="16sp"
                android:textColor="#dde8f0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/btnMainOptim"
                android:layout_marginTop="10dp">
            </Button>

            <Button
                android:id="@+id/btnMainSeoInfo"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:background="@drawable/btn_info"
                android:layout_marginLeft="0dp"
                android:layout_alignTop="@+id/btnMainSeo"
                android:layout_toEndOf="@+id/btnMainSeo">
            </Button>

            <Button
                android:id="@+id/btnMainOptimInfo"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:background="@drawable/btn_info"
                android:layout_marginLeft="0dp"
                android:layout_alignTop="@+id/btnMainOptim"
                android:layout_toEndOf="@+id/btnMainOptim">
            </Button>

            <Button
                android:id="@+id/btnMainToolsInfo"
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:background="@drawable/btn_info"
                android:layout_marginLeft="0dp"
                android:layout_alignTop="@+id/btnMainTools"
                android:layout_toEndOf="@+id/btnMainTools">
            </Button>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
